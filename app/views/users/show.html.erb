<div class="container">
	<div class="row row-profile-main">
		<div class="col-sm-3">
			<div class="well well-main-profile">
				<div class="well well-inside">
					<ul>
						<li><%= image_tag @user.avatar.url(:thumb) %></li>
							<li><h3><%= @user.first_name %> <%= @user.last_name %></h3></li>
										

										<% if @user == current_user %>
							<li><%= link_to "Edit Profile", edit_user_registration_path %></li>
							<li><%= link_to "New Recipe", new_recipe_path %></li>
												<% end %>
                            <li> <%= link_to "Follow", "/follow/#{@user.id}", method: :post %>                  </li>
					 </ul>
				    </div>
				    <ul>
					
					<li>Location: <strong><%= @user.location %></strong></li>
					<li>Bio: <strong><%= @user.bio %></strong></li>
					<li>Industry: <strong><%= @user.industry %></strong></li>
					<li>Company: <strong><%= @user.company %></strong></li>
							<% @followees.each do |one_followee| %>
					<li><%=  one_followee.first_name %> <%=  one_followee.last_name %></li>
								<% end %>
				</ul>
			</div>
		</div>
		<div class="col-sm-9 col-profile-main">
			<div class="well well-main-profile well-main-profile-2">
				<div class="well well-inside">
				<ul class="text-center recipe-ul">
					<% @recipes.each do |one_recipe| %>
					<li><h4>Recipe Name: <%= one_recipe.name %></h4></li>
					<li><%= image_tag one_recipe.avatar.url(:thumb) %></li>
					<li>Ingredients Description: <%= one_recipe.description %></li>
					<li>Recipe Instructions: <%= one_recipe.instructions %></li>
							<% if @user == current_user %>
					<li><%= link_to "Edit", edit_recipe_path(one_recipe) %></li>
					<li><%= link_to "Delete", recipe_path(one_recipe), method: "delete" %></li>
							<% end %>
					<% end %>
				</ul>
				</div>
			</div>
		</div>
	</div>
</div>



