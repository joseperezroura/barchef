
<div class="container">
<div class="row row-new-recipe">
		<div class="col-12-sm">
		<h1> New Recipe </h1>

			<%= form_for [@recipe], html: { multipart: true } do |f| %>
		<br>

			<%= f.label :name %>
		<br>
			<%= f.text_field :name %>
		
		<br>

			<%= f.label :description %>
		<br>
			<%= f.text_field :description %>
	
		<br>

			<%= f.label :instructions %>
		<br>
			<%= f.text_field :instructions %>

		<br>
			<%= f.file_field :avatar %>
		
		<br>

			<%= f.button %>
	
			<% end %>
		</div>
	</div>
</div>